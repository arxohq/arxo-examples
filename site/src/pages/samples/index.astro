---
import Layout from '../../layouts/Layout.astro';
import { readFileSync, existsSync } from 'node:fs';
import { join } from 'node:path';

const manifestPath = join(process.cwd(), 'public', 'manifest.json');
let manifest: { openclaw_sample?: string } = {};
if (existsSync(manifestPath)) {
  try {
    manifest = JSON.parse(readFileSync(manifestPath, 'utf-8'));
  } catch (_) {}
}
const base = import.meta.env.BASE_URL;
const samplePath = manifest.openclaw_sample ?? 'samples/openclaw/minimal-sample';
---

<Layout title="Samples" description="Sample projects for Arxo metrics.">
  <div class="space-y-8">
    <div>
      <h1 class="text-2xl font-bold tracking-tight text-slate-900 sm:text-3xl">Samples</h1>
      <p class="mt-2 text-slate-600">Minimal projects for testing metrics (e.g. openclaw_architecture).</p>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900">OpenClaw minimal sample</h2>
      <p class="mt-2 text-slate-600">Run the following to produce openclaw_architecture results:</p>
      <pre class="mt-4 overflow-x-auto rounded-lg bg-slate-900 p-4 font-mono text-sm text-slate-100"><code>arxo analyze --metric openclaw_architecture --path {samplePath}</code></pre>
      <div class="mt-4 flex flex-wrap gap-3">
        <a href={`${base}${samplePath}/`} class="inline-flex items-center rounded-lg bg-slate-100 px-4 py-2 font-medium text-slate-700 no-underline transition hover:bg-slate-200">
          Browse {samplePath}
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
        </a>
        <a href={`${base}${samplePath}/openclaw.json`} class="inline-flex items-center rounded-lg bg-slate-100 px-4 py-2 font-medium text-slate-700 no-underline transition hover:bg-slate-200">
          openclaw.json
        </a>
      </div>
    </div>
  </div>
</Layout>
