---
import Layout from '../../layouts/Layout.astro';
import { readFileSync, existsSync } from 'node:fs';
import { join } from 'node:path';

const manifestPath = join(process.cwd(), 'public', 'manifest.json');
let manifest: { languages?: { id: string; repos: string[] }[] } = { languages: [] };
if (existsSync(manifestPath)) {
  try {
    manifest = JSON.parse(readFileSync(manifestPath, 'utf-8'));
  } catch (_) {}
}
const base = import.meta.env.BASE_URL;
---

<Layout title="Reports" description="Arxo reports by language and repository.">
  <div class="space-y-8">
    <div>
      <h1 class="text-2xl font-bold tracking-tight text-slate-900 sm:text-3xl dark:text-slate-100">Reports</h1>
      <p class="mt-2 text-slate-600 dark:text-slate-300">By language and repository. Open report.html in browser for interactive view.</p>
    </div>

    <ul class="divide-y divide-slate-200 rounded-xl border border-slate-200 bg-white shadow-sm dark:divide-slate-700 dark:border-slate-700 dark:bg-slate-800">
      {manifest.languages?.flatMap((lang) =>
        lang.repos.map((repo) => (
          <li class="flex flex-col gap-2 px-6 py-4 transition hover:bg-slate-50 dark:hover:bg-slate-700/50 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <span class="font-mono text-sm text-slate-500 dark:text-slate-400">{lang.id}</span>
              <span class="mx-2 text-slate-400 dark:text-slate-500">/</span>
              <span class="font-semibold text-slate-900 dark:text-slate-100">{repo}</span>
            </div>
            <div class="flex flex-wrap gap-2">
              <a href={`${base}reports/${lang.id}/${repo}/`} class="rounded-md bg-slate-100 px-3 py-1.5 text-sm font-medium text-slate-700 no-underline transition hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">
                Page
              </a>
              <a href={`${base}reports/${lang.id}/${repo}/report.html`} class="rounded-md bg-emerald-50 px-3 py-1.5 text-sm font-medium text-emerald-700 no-underline transition hover:bg-emerald-100 dark:bg-emerald-900/30 dark:text-emerald-300 dark:hover:bg-emerald-900/50">
                report.html
              </a>
              <a href={`${base}reports/${lang.id}/${repo}/arxo.yaml`} class="rounded-md bg-amber-50 px-3 py-1.5 text-sm font-medium text-amber-800 no-underline transition hover:bg-amber-100 dark:bg-amber-900/30 dark:text-amber-200 dark:hover:bg-amber-900/50" title="Config with exclusions used to generate this report">
                arxo.yaml
              </a>
              <a href={`${base}reports/${lang.id}/${repo}/metadata.json`} class="rounded-md bg-slate-100 px-3 py-1.5 text-sm font-medium text-slate-700 no-underline transition hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">
                metadata.json
              </a>
            </div>
          </li>
        ))
      )}
    </ul>
  </div>
</Layout>
