---
import '../styles/global.css';
interface Props {
  title: string;
  description?: string;
}
const { title, description = 'Arxo examples and reports' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en" class="scroll-smooth overflow-x-hidden text-[16px]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title} | Arxo Examples</title>
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="flex min-h-screen flex-col overflow-x-hidden bg-slate-50 font-sans text-slate-900 antialiased selection:bg-slate-200 selection:text-slate-900">
    <header class="sticky top-0 z-50 border-b border-slate-200 bg-white/95 shadow-sm backdrop-blur supports-[backdrop-filter]:bg-white/80">
      <nav class="mx-auto flex max-w-4xl flex-col gap-3 px-4 py-4 sm:flex-row sm:items-center sm:justify-between sm:gap-6 sm:px-6">
        <a href={base} class="flex items-center gap-2 text-lg font-semibold text-slate-900 no-underline transition hover:text-slate-600 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 rounded-md -m-1 p-1">
          <img src="/logo.png" alt="" class="h-8 w-8 rounded-full" width="32" height="32" />
          Arxo Examples
        </a>
        <div class="flex flex-wrap gap-1 -mx-1">
          <a href={`${base}reports/`} class="rounded-md px-3 py-2 text-sm font-medium text-slate-600 no-underline transition hover:bg-slate-100 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2">
            Reports
          </a>
          <a href={`${base}mcp/`} class="rounded-md px-3 py-2 text-sm font-medium text-slate-600 no-underline transition hover:bg-slate-100 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2">
            MCP Examples
          </a>
          <a href={`${base}samples/`} class="rounded-md px-3 py-2 text-sm font-medium text-slate-600 no-underline transition hover:bg-slate-100 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2">
            Samples
          </a>
        </div>
      </nav>
    </header>
    <main class="mx-auto w-full max-w-4xl flex-1 px-4 py-8 sm:px-6 sm:py-10" style="min-width: 0;">
      <slot />
    </main>
    <footer class="mt-auto border-t border-slate-200 bg-white">
      <div class="mx-auto max-w-4xl px-4 py-6 sm:px-6">
        <p class="text-sm text-slate-500">
          Branch in this repo = Arxo version.
          <a href="https://github.com/arxohq/arxo" class="rounded text-slate-700 underline decoration-slate-300 underline-offset-2 transition hover:decoration-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2">
            Arxo
          </a>
          <span class="mx-2" aria-hidden="true">Â·</span>
          <a href="https://docs.arxo.io" class="rounded text-slate-700 underline decoration-slate-300 underline-offset-2 transition hover:decoration-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2">
            Docs
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>
